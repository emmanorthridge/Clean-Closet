<div class="login-form">

    <h2 class="bold2">LOGIN:</h2>
    <form action="/login" method="POST">

    <div class="form-group">
        <label for="input-username">Username</label>
        <input class="form-control" type="text" id="input-username" name="username" placeholder="Your username" />
    </div>

    <div class="form-group">
        <label for="input-password">Password</label>
        <input class="form-control" type="password" name="password" id="input-password" placeholder="********" />
    </div>

        <button class="btn-grad" type="submit">Login</button>

        {{#if errorMessage}}
        <p class="error">{{errorMessage}}</p>
        {{/if}}
    </form>

</div>