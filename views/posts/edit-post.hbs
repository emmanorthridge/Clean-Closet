<div class="container-fluid text-center">
    <h1>Edit your post</h1>

    <form action="/userProfile/{{this.id}}/edit" method="post">

        <label for="title">Title: </label>
        <input type="text" id="title" name="title"  value="{{this.title}}" required>

        <label for="country">Country: </label>
        <input type="text" id="propellers" name="country"   value="{{this.country}}"required>

        <label for="link">Brand's Website </label>
        <input type="url" id="link" name="link"   value="{{this.link}}" required>

         <label for="brandsName">Brand's Name </label>
        <input type="text" id="brandsName" name="brandsName"   value="{{this.brandsName}}" required>

        <button type='submit'>Update your post</button>

    </form>

</div>